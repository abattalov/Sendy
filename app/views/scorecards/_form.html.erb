<%= render partial: 'layouts/errors', locals: {instance: @scorecard} %>

<%= form_with model: @scorecard, local: true do |f| %>
    <%= f.label :course %>
    <%= f.text_field :course %>

    <br><br>
    
    <%= f.label :date %>
    <%= f.text_field :date %>

    <br><br>

    <%= f.label :strokes %>
    <%= f.text_field :strokes %>

    <br><br>

    <%= f.label :score %>
    <%= f.text_field :score %>

    <br><br>

   
    <%= f.number_field :user_id, id: :scorecard_user_id, value: current_user.id, type: :hidden %>


    <%= f.submit %>
<% end %>